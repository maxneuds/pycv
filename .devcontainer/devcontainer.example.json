{
"name": "Python",
"build": {
    "dockerfile": "Dockerfile",
    "args": {
        "PYTHON_VERSION": "3.13",
        "UID": "1000",
        "GID": "1000",
        "DOCKER_GID": "957"
    }
},
"runArgs": [
    "--env-file", "devcontainer.env"
],
"remoteUser": "dev",
"workspaceFolder": "/workspace/${localWorkspaceFolderBasename}",
"workspaceMount": "source=${localWorkspaceFolder},target=/workspace/${localWorkspaceFolderBasename},type=bind",
"forwardPorts": [8080],
"customizations": {
    "vscode": {
        "extensions": [
            "docker.docker",
            "ms-python.python",
            "ms-python.vscode-pylance",
            "ms-python.autopep8",
            "ms-toolsai.jupyter",
            "ms-toolsai.datawrangle",
            "ms-azuretools.vscode-docker",
            "ms-azuretools.vscode-azureterraform",
            "google.geminicodeassist",
            "github.copilot",
            "github.copilot-chat",
            "hashicorp.terraform",
            "mhutchie.git-graph",
            "irongeek.vscode-env",
            "johnpapa.vscode-peacock",
            "dbaeumer.vscode-eslint",
            "tamasfe.even-better-toml",
            "esbenp.prettier-vscode"
        ],
        "settings": {
            "terminal.integrated.defaultProfile.linux": "zsh",
            "editor.formatOnSave": true,
            "eslint.format.enable": true,
            "autopep8.args": [
                "--max-line-length",
                "160"
            ],
            "docker.lsp.experimental.scout.criticalHighVulnerabilities": false,
            "docker.lsp.experimental.scout.vulnerabilities": false
        }
    }
},
"mounts": [
    "type=bind,source=/var/run/docker.sock,target=/var/run/docker.sock",
    "type=bind,source=${localEnv:HOME}/.ssh,target=/home/dev/.ssh"
]
}
